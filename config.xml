<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id = "com.cgvak.iosteam"
version = "0.1.0">
<name>SMS &amp; Email Composer</name>
<description>
User can compose and send their Emails and Message by using this application. 
</description>
<author href="www.cgvakindia.com" email="harivenkatesh@cgvakindia.com">
B.Hari Venkatesh
</author>

<preference name="SplashScreenDelay" value="5000" />
<preference name="permissions" value="none"/>
<preference name="phonegap-version" value="3.6.3" /> 
<preference name="orientation" value="default" /> 
<preference name="target-device" value="universal" /> 
<preference name="fullscreen" value="true" /> 
<preference name="webviewbounce" value="false" /> 
<preference name="prerendered-icon" value="true" /> 
<preference name="stay-in-webview" value="false" /> 
<preference name="ios-statusbarstyle" value="black-opaque" /> 
<preference name="detect-data-types" value="true" /> 
<preference name="exit-on-suspend" value="false" /> 
<preference name="show-splash-screen-spinner" value="true" /> 
<preference name="auto-hide-splash-screen" value="true" /> 
<preference name="disable-cursor" value="false" /> 
<preference name="android-minSdkVersion" value="7" /> 
<preference name="android-installLocation" value="auto" /> 
<preference name="StatusBarOverlaysWebView" value="true" />
<!-- Plugins -->
<!-- Core plugins -->
<!-- Contact plugin used here -->
<gap:plugin name="com.phonegap.plugin.statusbar"/>
<gap:plugin name="org.apache.cordova.splashscreen" />
<gap:plugin name="nl.x-services.plugins.toast" />
<gap:plugin name="de.appplant.cordova.plugin.email-composer" />
<gap:plugin name="tr.bel.mamak.sms_plagin" />

<!--Icon image with different ios and android dimensions-->
<icon src="img/icon.png"/>
<icon src="img/icon/android/36-36.png" gap:platform="android" gap:qualifier="ldpi" />
<icon src="img/icon/android/48-48.png" gap:platform="android" gap:qualifier="mdpi" />
<icon src="img/icon/android/72-72.png" gap:platform="android" gap:qualifier="hdpi" />
<icon src="img/icon/android/96-96.png" gap:platform="android" gap:qualifier="xhdpi" />
<icon src="img/icon/android/512-512.png" gap:platform="android" gap:qualifier="xhdpi" />
<icon src="img/icon/android/1024-1024.png" gap:platform="android" gap:qualifier="xhdpi" />

<icon src="res/icon/blackberry/icon-80.png" gap:platform="blackberry" />
<icon src="res/icon/blackberry/icon-80.png" gap:platform="blackberry" gap:state="hover"/>

<icon src="img/icon/ios/29-29.png" gap:platform="ios" width="29" height="29" />
<icon src="img/icon/ios/40-40.png" gap:platform="ios" width="40" height="40" />
<icon src="img/icon/ios/50-50.png" gap:platform="ios" width="50" height="50" />
<icon src="img/icon/ios/57-57.png" gap:platform="ios" width="57" height="57" />
<icon src="img/icon/ios/58-58.png" gap:platform="ios" width="58" height="58" />
<icon src="img/icon/ios/72-72.png" gap:platform="ios" width="72" height="72" />
<icon src="img/icon/ios/76-76.png" gap:platform="ios" width="76" height="76" />
<icon src="img/icon/ios/80-80.png" gap:platform="ios" width="80" height="80" />
<icon src="img/icon/ios/100-100.png" gap:platform="ios" width="100" height="100" />
<icon src="img/icon/ios/114-114.png" gap:platform="ios" width="114" height="114" />
<icon src="img/icon/ios/120-120.png" gap:platform="ios" width="120" height="120" />
<icon src="img/icon/ios/144-144.png" gap:platform="ios" width="144" height="144" />
<icon src="img/icon/ios/152-152.png" gap:platform="ios" width="152" height="152" />
<icon src="img/icon/ios/1024-1024.png" gap:platform="ios" width="1024" height="1024" />

<icon src="res/icon/webos/icon-64.png" gap:platform="webos" />
<icon src="res/icon/windows-phone/icon-48.png" gap:platform="winphone" />
<icon src="res/icon/windows-phone/icon-173.png" gap:platform="winphone" gap:role="background" />

<!-- Define app splash screen for each platform. -->
<gap:splash src="img/SplashScreen.png"/>
<gap:splash src="img/splash/android/320-240.png" gap:platform="android" gap:qualifier="port-ldpi" />
<gap:splash src="img/splash/android/480-320.png" gap:platform="android" gap:qualifier="port-mdpi" />
<gap:splash src="img/splash/android/240-320.png" gap:platform="android" gap:qualifier="port-hdpi" />
<gap:splash src="img/splash/android/320-480" gap:platform="android" gap:qualifier="port-xhdpi" />
<gap:splash src="img/splash/android/480-800" gap:platform="android" gap:qualifier="port-xhdpi" />
<gap:splash src="img/splash/android/800-480" gap:platform="android" gap:qualifier="port-xhdpi" />
